<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnHistory"
        style="@style/StyleHistoryButton"
        android:layout_width="103dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:drawableEnd="@drawable/ic_history"
        android:enabled="true"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/text_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="280dp"
        android:layout_height="63.16dp"
        android:layout_marginTop="209dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="206dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/shape_rounded_background"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            style="@style/StyleTitleStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/text_greeting" />

        <Button
            android:id="@+id/btnStart"
            style="@style/StyleButtonStart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/background_color"
            android:enabled="true"
            android:text="@string/text_start" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>