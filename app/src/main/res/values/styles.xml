<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleStartButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleHistoryButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/background_color</item>
    </style>

    <style name="StyleNextButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/inter_black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitleStart" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleNumberQuestion" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/number_question_color</item>
    </style>

    <style name="StyleQuestion" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="QuizOptionRadioButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleQuizWarning" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleButtonHistory" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleHistoryButton</item>
        <item name="cornerRadius">@dimen/corner_radius_24</item>
    </style>

    <style name="StyleButtonStart" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleStartButton</item>
        <item name="cornerRadius">@dimen/corner_radius_40</item>
    </style>


    <style name="QuizOptionButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="QuizNextButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/background_button_next</item>
        <item name="android:textAppearance">@style/StyleNextButton</item>
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>